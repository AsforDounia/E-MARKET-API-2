{
  "name": "e-market-api",
  "version": "1.0.0",
  "type": "module",
  "description": "La plateforme est une solution e-commerce évolutive conçue pour permettre à l’entreprise de vendre ses produits en ligne de manière simple, sécurisée et performante. Elle offre une interface intuitive pour les utilisateurs ainsi qu’un espace d’administration complet pour la gestion des opérations commerciales.",
  "main": "index.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "migrate": "node migrations/migrate.js",
    "seed": "node migrations/seed.js",
    "test:unit": "cross-env NODE_ENV=test:unit mocha test/unit/**/*.js --timeout 5000 --exit",
    "test:unit:cart": "cross-env NODE_ENV=test:unit mocha  --no-config test/unit/cartTest.js --timeout 5000 --exit",
    "test:unit:auth": "cross-env NODE_ENV=test:unit mocha test/unit/authTest.js --timeout 5000 --exit",
    "test:integration": "NODE_ENV=test mocha test/integration/**/*.js --timeout 10000 --exit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AsforDounia/E-Market-API.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/AsforDounia/E-Market-API/issues"
  },
  "homepage": "https://github.com/AsforDounia/E-Market-API#readme",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.0",
    "rate-limit-mongo": "^2.3.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "yup": "^1.7.1"
  },
  "devDependencies": {
    "chai": "^6.2.0",
    "mocha": "^11.7.4",
    "nodemon": "^3.1.10",
    "sinon": "^21.0.0",
    "supertest": "^7.1.4"
  }
}
