  "description": "La plateforme est une solution e-commerce évolutive conçue pour permettre à l’entreprise de vendre ses produits en ligne de manière simple, sécurisée et performante. Elle offre une interface intuitive pour les utilisateurs ainsi qu’un espace d’administration complet pour la gestion des opérations commerciales.",
  "main": "index.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "migrate": "node migrations/migrate.js",
    "seed": "node migrations/seed.js",
    "test": "NODE_ENV=test mocha test/setup.js test/**/*.test.js --timeout 5000 --exit",
    "test:unit": "NODE_ENV=test:unit mocha test/setup.js test/unit/**/*.js --timeout 5000 --exit",
    "test:unit:auth": "NODE_ENV=test:unit mocha test/setup.js test/unit/authTest.js --timeout 5000 --exit",
    "test:integration": "NODE_ENV=test mocha test/setup.js test/integration/**/*.js --timeout 10000 --exit",
    "test:integration:auth": "NODE_ENV=test mocha test/setup.js test/integration/authTest.js --timeout 10000 --exit"
  },
